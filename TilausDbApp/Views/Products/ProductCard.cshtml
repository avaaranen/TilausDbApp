@model IEnumerable<TilausDbApp.Models.Tuotteet>
@{
    ViewBag.Title = "ProductCard";
}

<div class="container-fluid">
    <h4>Tuotteita @Model.Count() kappaletta</h4>
    <p><button class="btn btn-primary">@Html.ActionLink("Lisää tuote", "Create", "Products", new { @class = "button-link" })</button></p>


    <div class="row">
        @foreach (TilausDbApp.Models.Tuotteet tuote in Model)
        {
            <div class="col-lg-3">
                <div class="card mb-3">
                    <h3 class="card-header">@tuote.Nimi</h3>
                    <div class="card-body">
                        <h5 class="card-title">@tuote.Ahinta &euro;</h5>
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" src="@tuote.Kuvalinkki" alt="@tuote.Kuvalinkki" />
                    <div class="card-body">
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>

                    <div class="card-body">
                        @Html.ActionLink("Muokkaa | ", "Edit", new { id = tuote.TuoteID })
                        @Html.ActionLink("Poista", "Delete", new { id = tuote.TuoteID })
                    </div>
                    <div class="card-footer text-muted">
                        Id: @tuote.TuoteID
                    </div>
                </div>
            </div>
        }
    </div>
</div>
