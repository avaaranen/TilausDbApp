<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a style="margin-left: 50px;" class="navbar-brand" href="./">TilausDbApp</a>
            <button style="margin-right: 20px;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item active"><a class="nav-link" href="./"><span class="sr-only">(current)</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/About">Tietoja</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Tietokanta</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/Products">Tuotteet</a>
                            <a class="dropdown-item" href="/Products/ProductCard">Tuotekortit</a>
                            <a class="dropdown-item" href="/Customers">Asiakkaat</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Jotain muuta</a>
                        </div>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Contact">Yhteystiedot</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Home/Map">Kartta</a></li>

                </ul>
                <ul style="margin-right: 20px;" class="navbar-nav">
                    <li class="nav-item">
                        @{
                            if (ViewBag.LoggedStatus == "Out")
                            {
                                @Html.ActionLink("Kirjaudu", "Login", "Home", new { @class = "nav-link" })

                            }
                            if (ViewBag.LoggedStatus == "In")
                            {
                                @Html.ActionLink("Uloskirjaudu", "LogOut", "Home", new { @class = "nav-link" })

                            }
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rekisteröidy</a>
                    </li>
                </ul>
            </div>
        </nav>
        <p></p>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - TilausDb sovellus</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
